<form action= "/articles/<%=@article.id %>" method="post">

  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label>Title</label><input class="title" id="title" type="text" name="article[title]" value=" <%= @article.title %>">
  <label>Content</label><input type="text" id="content" name="article[content]" value=" <%= @article.content%>">
  <input type="submit" value="Submit">
</form>
